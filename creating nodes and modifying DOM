var newDiv  = document.createElement('div')
newDiv.className = 'divclass';
newDiv.setAttribute('title','hello');
var newDivtext = document.createTextNode('HEllo')
newDiv.style.fontSize ='30px' 
newDiv.appendChild(newDivtext)
var container = document.querySelector('header .headerdiv');
var h1 = document.querySelector('header h1');
container.insertBefore(newDiv,h1);
var li = document.createElement('li');
li.className = 'listgroupitems';
var litext = document.createTextNode('HEllo');
li.appendChild(litext);
var ul = document.querySelector('.listitems');
var ulchild = document.querySelector('ul li');
ul.insertBefore(li,ulchild)
